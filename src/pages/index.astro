	</div>
	<!-- End Contact Section -->
</Layout>

<script>
	let modals = document.querySelectorAll(".modal")

	modals.forEach((modal) => {
		modal.addEventListener('hidden.bs.modal', event => {
			modal.querySelector<HTMLVideoElement>("video").pause()
		})
	})
</script>
